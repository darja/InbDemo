<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ValidatedTextInput">
        <attr name="android:hint" format="string" />
        <attr name="android:inputType" format="reference" />
        <attr name="android:maxLength" format="integer" />
        <attr name="validation_event" format="enum">
            <enum name="lost_focus" value="0" />
            <enum name="text_changed" value="1" />
        </attr>
    </declare-styleable>
</resources>